

<!-- Link to styling -->
<%= stylesheet_link_tag 'devise.css' %>

<div class="main">
  <div class="mainBox">
    <div class="title">
      <h2>Devbank</h2>
      <i class="fa fa-envelope-open" aria-hidden="true"> &nbsp;</i>
    </div>

    <%= form_for(resource, as: resource_name, url:registration_path(resource_name), data: {turbo: false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password, "Senha" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> mínimo de caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmação da senha" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>